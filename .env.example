# Database — PostgreSQL connection string
DATABASE_URL=postgresql://rendr:devpassword@localhost:5432/rendr

# NextAuth — generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET=change-me-minimum-32-chars-in-production
NEXTAUTH_URL=http://localhost:3000

# Rate limiting (requests per API key per minute)
API_RATE_LIMIT_PER_MINUTE=60

# Storage
# STORAGE_MODE=local  (only supported mode for now)
STORAGE_MODE=local
STORAGE_LOCAL_DIR=/data

# Webhook delivery retries
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY_MS=1000

# Playwright PDF rendering timeout (ms)
PLAYWRIGHT_TIMEOUT_MS=30000

# Resend (email) — get your API key at resend.com
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx
RESEND_FROM=Rendr <noreply@rendrpdf.com>

# Production only — leave blank for local dev
# POSTGRES_PASSWORD=


# Stripe — https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxx
# Stripe Price IDs — create products + recurring prices in Stripe dashboard
STRIPE_GROWTH_PRICE_ID=price_xxxxxxxxxxxxxxxxxxxx
STRIPE_BUSINESS_PRICE_ID=price_xxxxxxxxxxxxxxxxxxxx
